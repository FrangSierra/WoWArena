<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/wow_brown</item>
        <item name="colorPrimaryDark">@color/wow_brown</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/background_gradient</item>
        <item name="android:itemBackground">@color/wow_brown</item>
        <item name="android:itemTextAppearance">@style/DefaultAppText</item>
    </style>

    <!--toolbar-->
    <style name="ToolBarStyle">
        <item name="android:background">@color/wow_brown</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="actionMenuTextColor">@color/textColorPrimary</item>
    </style>

    <!--Splash screen-->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <style name="DefaultAppText">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColorHint">@color/textColorPrimary</item>
    </style>

    <style name="DefaultAppText.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--Settings-->
    <style name="ProfileSetting.Title.Text" parent="DefaultAppText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginLeft">@dimen/settings_side_margin</item>
        <item name="android:layout_marginRight">@dimen/settings_side_margin</item>
    </style>

    <!--Settings-->
    <style name="ProfileSetting.Title.Description" parent="ProfileSetting.Title.Text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">@dimen/settings_side_margin</item>
        <item name="android:layout_marginRight">@dimen/settings_side_margin</item>
    </style>

    <!--Separator-->
    <style name="SimpleSeparator">
        <item name="android:layout_height">@dimen/settings_separator_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/default_separator_color</item>
    </style>

</resources>
